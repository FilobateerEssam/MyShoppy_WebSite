@using MyShoppy.Entities
@model Category

@{
    ViewData["Title"] = "Delete";

}
<h1>Delete Category</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="DeleteCategory">
            <input asp-for="Id" hidden />
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"  disabled/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" disabled />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-warning">Back To List</a>
            </div>
        </form>
    </div>
</div>


<!-- Client Side Validation Not Reload Page is Best in Performace-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

