@model IEnumerable<Category>

@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Show All Categories";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<table class="table table-hover" width="100%">

    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Date Created</td>
        <td>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create Category</a>

        </td>
    </tr>
    @foreach (var category in Model)
    {

        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>@category.CreatedTime</td>
            <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
            </td>
            
        </tr>

    }
</table>
